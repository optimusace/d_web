<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Content Form</title>
    <link rel="stylesheet" href="/css/contentForm.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="content">
        <p class="content-header">Create Menu</p>
        <div class="content-form">
            <form method="POST" action="/api/v1/menu" enctype="multipart/form-data" id="content-form">

                <!-- MAIN MENU NAME AND LINK -->
                
                <div class="content-name-link"> 
                    <div class="name">
                        <label for="">Menu Name</label>
                        <input type="text" name="name" id="menu-name" class="name-input">
                    </div>
                    <div class="link">
                        <label for="">Menu Link</label>
                        <input type="text" name="link" id="menu-link" class="link-input">
                    </div>
                </div>

                <!-- MAIN MENU CONTENTS  -->

                <div class="menu-contents" id="menu-contents">
                    <p class="menu-contents-title">Contents</p>
                    <div class="menu-content">
                        <div class="content-title-container">
                            <p class="content-title">Content 1</p>
                        </div>
                        <div class="heading">
                            <label for="">Heading</label>
                            <textarea name="main_heading1" id=""></textarea>
                        </div>
                        <div class="sub-heading">
                            <label for="">Sub-Heading</label>
                            <textarea name="main_subHeading1" id=""></textarea>
                        </div>
                        <div class="short-description">
                            <label for="">Short Description</label>
                            <textarea name="main_shortDescription1" id=""></textarea>
                        </div>
                        <div class="long-description">
                            <label for="">Long Description</label>
                            <textarea name="main_longDescription1" id=""></textarea>
                        </div>
                        <div class="page-location">
                            <label for="">Page Location</label>
                            <input type="text" name="main_pageLocation1">
                        </div>
                        <div class="images-and-description">
                            <label for="">Images</label>
                            <div class="images">
                                <div class="image">
                                    <label for="image-select-input" class="image-select">
                                        <i class='bx bx-cloud-upload upload'></i>
                                        <p class="message">Upload Image</p>
                                        <input type="file" name="main_images1" accept="image/*" class="image-select-input" id="image-select-input">
                                        <img src="" alt="" style="display: none;">
                                        <i class="fas fa-trash delete" style="display: none;"></i>
                                    </label>
                                    <p class="image-description-title">Image Description</p>
                                    <textarea name="main_imageDescription1" class="image-description" disabled="true"></textarea>
                                </div>
                                <div class="add-more-main-image">
                                    <p class="add-more-icon"><i class="fas fa-plus main-image"></i></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="button"><button id="add-more-main-content" type="button">Add more content</button></div>


                <!-- SUB MENUS AND ITS CONTENTS -->

                <div class="sub-menus" id="sub-menus">
                    <div class="sub-menus-title">Sub Menus</div>
                    <div class="sub-menu">
                        <div class="sub-menu-title-container">
                            <p class="sub-menu-title">Sub Menu 1</p>
                            <i class="fas fa-angle-down"></i>
                        </div>
                        <div class="sub-menu-details sub-menu-hide">
                            <div class="sub-menu-title-link">
                                <div class="name">
                                    <label for="">Sub-Menu Name</label>
                                    <input type="text" name="subMenu_name1" class="name-input">
                                </div>
                                <div class="link">
                                    <label for="">Sub-Menu Link</label>
                                    <input type="text" name="subMenu_link1" class="link-input">
                                </div>
                            </div>
                            <div class="sub-menu-contents">
                                <p class="sub-menu-contents-title">Contents</p>
                                <div class="sub-menu-content">
                                    <div class="content-title-container">
                                        <p class="content-title">Content 1</p>
                                    </div>
                                    <div class="heading">
                                        <label for="">Heading</label>
                                        <textarea name="subMenu_content1_heading1"></textarea>
                                    </div>
                                    <div class="sub-heading">
                                        <label for="">Sub-Heading</label>
                                        <textarea name="subMenu_content1_subHeading1"></textarea>
                                    </div>
                                    <div class="short-description">
                                        <label for="">Short Description</label>
                                        <textarea name="subMenu_content1_shortDescription1"></textarea>
                                    </div>
                                    <div class="long-description">
                                        <label for="">Long Description</label >
                                        <textarea name="subMenu_content1_longDescription1"></textarea>
                                    </div>
                                        <div class="page-location">
                                        <label for="">Page Location</label>
                                        <input type="text" name="subMenu_content1_pageLocation1">
                                    </div>
                                    <div class="images-and-description">
                                        <label for="">Images</label>
                                        <div class="images">
                                            <div class="image">
                                                <label for="image-select-input1" class="image-select">
                                                    <i class='bx bx-cloud-upload upload'></i>
                                                    <p class="message">Upload Image</p>
                                                    <input type="file" name="subMenu_content1_images1" accept="image/*" class="image-select-input" id="image-select-input1">
                                                    <img src="" alt="" style="display: none;">
                                                    <i class="fas fa-trash delete" style="display: none;"></i>
                                                </label>
                                                <p class="image-description-title">Image Description</p>
                                                <textarea name="subMenu_content1_imageDescription1" class="image-description" disabled="true"></textarea>
                                            </div>
                                            <div class="add-more-sub-image">
                                                <p class="add-more-icon"><i class="fas fa-plus sub-image"></i></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="button"><button class="add-more-submenu-content" type="button">Add more content</button></div>
                            </div>
                        </div>
                    </div>

                    <div id="add-sub-menu">Add Sub Menu</div>

                </div>

                <div class="submit-btn"><input type="submit" value="CREATE MENU"></div>

            </form>
        </div>
    </div>
    
    <script src="/js/contentForm/handleFormSubmit.js"></script>
    <script src="/js/contentForm/addMainMenuContents.js"></script>
    <script src="/js/contentForm/showHideSubMenu.js"></script>
    <script src="/js/contentForm/addSubMenu.js"></script>
    <script src="/js/contentForm/addSubMenuContents.js"></script>
    <script src="/js/contentForm/addMoreMainImage.js"></script>
    <script src="/js/contentForm/addMoreSubImage.js"></script>
    <script src="/js/contentForm/displaySelectedImage.js"></script>

    <script>
        //below script will be used to delete the parent of the associated image
        document.body.addEventListener("click",(e)=>{
            if(e.target.classList.contains("delete")){
                console.log("delete icon clicked for the image to be deleted")
                e.target.parentElement.parentElement.remove()
            }
        })
    </script>

</body>
</html>